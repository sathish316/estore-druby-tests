<h2>
  <%= image_tag 'ecart.jpg', width: 50, height: 50%>
  EStore
</h2>
<div class='category-select'>
  <p>
  <span>
    <%= link_to 'All', products_path %> | 
  </span>
  <% @categories.each do |category|%>
    <%= link_to category['name'], products_path(category_id: category['id']) %> | 
  <% end %>
  <p>
</div>
<div class='order-links'>
  <%= link_to 'View Cart', @cart %>
</div>
<% @products.each do |product|%>
  <div class='product' id="product-#{product['id']}">
    <h4>
      <%=product['title']%>
    </h4>
    <span>
      <%= image_tag product['image_url'] %>
    </span>
    <p>
      <%=product['description']%>
    </p>
    <%= button_to 'Add to Cart', add_to_cart_path(product['id']), class: 'add-to-cart', id: "add-to-cart-#{product['id']}" %>
  </div>
<% end %>
