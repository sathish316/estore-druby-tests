<h1>Listing delivery_items</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Quantity</th>
    <th>Shipping address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @delivery_items.each do |delivery_item| %>
  <tr>
    <td><%= delivery_item.product_id %></td>
    <td><%= delivery_item.quantity %></td>
    <td><%= delivery_item.shipping_address %></td>
    <td><%= link_to 'Show', delivery_item %></td>
    <td><%= link_to 'Edit', edit_delivery_item_path(delivery_item) %></td>
    <td><%= link_to 'Destroy', delivery_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

